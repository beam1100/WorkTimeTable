<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/summaryHolderLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/summaryHolderNameTV"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/ongulip"
        android:gravity="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/summaryHolderNum1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/ongulip"
        android:gravity="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/summaryHolderNum2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/ongulip"
        android:gravity="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/summaryHolderSelectMemberBtn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/ongulip"
        android:gravity="center"
        android:text="선택"
        android:textSize="20sp" />
</LinearLayout>